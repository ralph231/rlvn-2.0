<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - RLVN Studio</title>
    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="/login.css">
    <link rel="icon" href="/favicon.png" type="image/x-icon">
</head>
<body>

    <!-- 3D Animation Background -->
    <div class="background-animation">
        <div class="floating-cube" style="top: 20%; left: 15%; width: 40px; height: 40px;"></div>
        <div class="floating-cube" style="top: 60%; left: 80%; width: 60px; height: 60px;"></div>
        <div class="floating-cube" style="top: 40%; left: 60%; width: 30px; height: 30px;"></div>
    </div>

    <!-- Notification for login -->
    <div class="notification" id="loginNotification"></div>

    <% if (success_msg) { %>
        <div class="alert alert-success">
            <%= success_msg %>
        </div>
    <% } %>
    <% if (error_msg) { %>
        <div class="alert alert-danger">
            <%= error_msg %>
        </div>
    <% } %>

    <!-- Login Form -->
    <div class="login-container">
        <h2>RLVN STUDIO</h2>
        <form action="/login" method="POST">
            <input type="text" name="username" placeholder="Username" required>
            <input type="password" name="password" placeholder="Password" required>
            <button type="submit">Login</button>
        </form>
    </div>

    <!-- Footer -->
    <footer class="footer-content">
        <p>&copy; <%= new Date().getFullYear() %> RLVN Studio. All rights reserved.</p>
    </footer>
        <script src="/login.js"></script>
</body>
</html>
